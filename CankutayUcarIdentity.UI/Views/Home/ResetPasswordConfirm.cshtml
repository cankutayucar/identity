@model CankutayUcarIdentity.UI.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}



<div class="row">
    <div class="col-md-4 offset-4">
        <h4>Yeni Şifre</h4>
        <hr />
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control"/>
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yeni şifre oluştur" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
