@{
    Layout = "_LayoutMember";
}
@model CankutayUcarIdentity.UI.ViewModels.UserViewModel
<h3 class="text-center">Kullanıcı bilgileri</h3>
<div class="row">
    <div class="col-md-3">
        <img src="~/img/user-manager.png" style="width: 100%; height: 100%;" />
    </div>
    <div class="col-md-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı ismi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon numarası</th>
                <td>@Model.PhoneNumber</td>
            </tr>

        </table>
    </div>
</div>
