@{
    ViewData["Title"] = "TwoFactorAut";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
@using CankutayUcarIdentity.UI.ComplexTypes
@model CankutayUcarIdentity.UI.ViewModels.AuthenticatorViewModel
<h5 class="alert alert-success mt-3 text-center fw-bold text-info">İki Adımlı Kimlik Doğrulama</h5>
<div class="row">
    <div class="col-12">
        <form asp-action="TwoFactorAut" asp-controller="Member" method="post">
            <div class="form-group mt-3">
                <label class="form-label text-info fs-4 fw-bold" asp-for="TwoFactorType">Authentication Type</label>
                @*<select class="form-select mt-1" asp-for="TwoFactorType" asp-items="@(new SelectList(Enum.GetNames(typeof(TwoFactor))))"></select>*@
                <select class="form-select mt-1" asp-for="TwoFactorType" asp-items="Html.GetEnumSelectList<TwoFactor>()"></select>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-10"></div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-success">Güncelle</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    @if (ViewBag.warning != null)
    {
        <div class="col col-12 mt-5">
            <div class="alert alert-warning">
                @ViewBag.warning
            </div>
        </div>
    }
    @if (TempData["message"] != null)
    {
        <div class="col col-12 mt-5">
            <div class="alert alert-info">
                @TempData["message"]?.ToString()
            </div>
        </div>
    }
    @if(TempData["recoveryCodes"] != null)
    {
        <div class="col col-12 mt-5">
            <div class="alert alert-info">
                Aşağıdaki kodları güvenli bir yerde saklayınız. Microsoft/Google Authenticator uygulamasını kullanamadığınız durumlarda bu kurtarma kodlarını kullanabilirsiniz.
            </div>
            <div class="alert alert-secondary mt-2">
                @foreach (string code in (TempData["recoveryCodes"] as string[]))
                {
                    <strong>@code</strong>
                }
            </div>
        </div>
    }
</div>
