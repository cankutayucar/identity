@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<CankutayUcarIdentity.UI.ViewModels.RoleAssignViewModel>
<h1>Role Ata</h1>

<form asp-action="RoleAssign" asp-controller="Admin" method="post">
    @for (int i = 0; i < @Model.Count; i++)
    {
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].isChecked" />
            <label asp-for="@Model[i].Id" class="form-control">@Model[i].Name</label>
            <input type="hidden" asp-for="@Model[i].Id" />
            <input type="hidden" asp-for="@Model[i].Name" />
        </div>
    }
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>


