<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    @await RenderSectionAsync("css",false)
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Member">üye Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Index" asp-controller="Admin">Admin Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Manager" asp-controller="Member">Manager Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Editor" asp-controller="Member">Editor Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Adana" asp-controller="Member">Adanalılar ana sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Violence" asp-controller="Member">Violence ana sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="ExchangeRedirect" asp-controller="Member">Muhasebe ana sayfa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>




    <div class="container">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>
                <a asp-action="PasswordChange" asp-controller="Member" class="btn btn-info col-12 mb-1 mt-1">Şifre değiştir</a>
                <a asp-action="UserEdit" asp-controller="Member" class="btn btn-info col-12 mb-1">Bilgi güncelleme</a>
                <a asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index" class="btn btn-info col-12 mb-1">Çıkış yap</a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", false)
</body>
</html>
